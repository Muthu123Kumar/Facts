{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Fact",
    "type": "object",
    "properties": {
        "FactId": { "type": "string" },
        "FactType": { "type": "string" },
        "Name": { "type": "string" },
        "KeyMoment": { "type": "string" },
        "FactGroupId": { "type": "string" },
        "FactGroupName": { "type": "string" },
        "Description": { "type": "string" },
        "MediaType": {
            "type": "array",
            "items": { "type": "string" }
        },
        "Query": { "type": "string" },
        "MappedEntity": { "type": "string" },
        "Status": { "type": "string" },
        "CreatedAt": { "type": "string", "format": "date-time" },
        "UpdatedAt": { "type": "string", "format": "date-time" },
        "Version": { "type": "integer" }
    },
    "required": [
        "FactType",
        "Name",
        "KeyMoment",
        "FactGroupId",
        "FactGroupName",
        "Description",
        "MediaType",
        "Query",
        "MappedEntity",
        "Status",
        "CreatedAt",
        "UpdatedAt",
        "Version"
    ]
}
